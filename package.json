{
  "name": "roughness",
  "version": "0.1.0-beta.23",
  "description": "A Vue component library with hand-drawn appearance",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "directories": {
    "doc": "docs"
  },
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "prepack": "vite build",
    "release": "release-it",
    "release:beta-as-latest": "pnpm run release --preRelease=beta --npm.tag=latest",
    "docs:dev": "pnpm -F docs dev",
    "docs:build": "pnpm -F docs build",
    "lint:script": "eslint --cache --fix './**/*.{cjs,js,ts,vue}'",
    "lint:style": "stylelint --ignore-path .gitignore --cache --fix ./**/*.{css,vue}",
    "lint": "pnpm run lint:script && pnpm run lint:style",
    "test": "vitest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CyanSalt/roughness.git"
  },
  "keywords": [
    "component",
    "rough",
    "vue"
  ],
  "author": "CyanSalt",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/CyanSalt/roughness/issues"
  },
  "homepage": "https://github.com/CyanSalt/roughness#readme",
  "devDependencies": {
    "@babel/types": "7.27.0",
    "@cyansalt/eslint-config": "^4.3.1",
    "@cyansalt/stylelint-config": "^4.1.0",
    "@cyansalt/tsconfig": "^2.2.1",
    "@release-it/conventional-changelog": "^10.0.1",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.15.3",
    "@types/parse-unit": "^1.0.3",
    "@types/to-px": "^1.1.4",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vue-macros/common": "1.15.0",
    "@vue-macros/reactivity-transform": "3.0.0-beta.10",
    "@vueuse/components": "^13.1.0",
    "@vueuse/core": "^13.1.0",
    "colord": "^2.9.3",
    "eslint": "^9.25.1",
    "fast-glob": "^3.3.3",
    "lodash-es": "^4.17.21",
    "lucide": "^0.503.0",
    "parse-unit": "^1.0.1",
    "release-it": "^19.0.1",
    "roughjs": "^4.6.6",
    "sass-embedded": "^1.87.0",
    "stylelint": "^16.19.1",
    "to-px": "^1.1.0",
    "typescript": "^5.8.3",
    "vite": "^6.3.4",
    "vite-plugin-dts": "^4.5.3",
    "vitest": "^3.1.2",
    "vue": "^3.5.13"
  },
  "peerDependencies": {
    "vue": ">=3.3.0"
  }
}

{
  "name": "roughness",
  "version": "0.1.0-beta.9",
  "description": "A Vue component library with hand-drawn appearance",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "directories": {
    "doc": "docs"
  },
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "prepack": "vite build",
    "release": "release-it",
    "release:beta-as-latest": "npm run release -- --preRelease=beta --npm.tag=latest",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "lint:script": "eslint --ignore-path .gitignore --ext .cjs,.js,.ts,.vue --cache --fix .",
    "lint:style": "stylelint --ignore-path .gitignore --cache --fix ./**/*.{css,vue}",
    "lint": "npm run lint:script && npm run lint:style"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CyanSalt/roughness.git"
  },
  "keywords": [
    "component",
    "rough",
    "vue"
  ],
  "author": "CyanSalt",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/CyanSalt/roughness/issues"
  },
  "homepage": "https://github.com/CyanSalt/roughness#readme",
  "workspaces": [
    "docs"
  ],
  "devDependencies": {
    "@cyansalt/eslint-config-preset": "^1.14.0",
    "@cyansalt/stylelint-config-preset": "^1.4.1",
    "@cyansalt/tsconfig": "^2.1.1",
    "@release-it/conventional-changelog": "^7.0.0",
    "@types/lodash-es": "^4.17.7",
    "@types/node": "^20.5.0",
    "@types/parse-unit": "^1.0.1",
    "@types/to-px": "^1.1.2",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vue-macros/reactivity-transform": "^0.3.10",
    "@vueuse/components": "^10.2.1",
    "@vueuse/core": "^10.2.0",
    "colord": "^2.9.3",
    "fast-glob": "^3.2.12",
    "lodash-es": "^4.17.21",
    "lucide": "^0.279.0",
    "parse-unit": "^1.0.1",
    "release-it": "^16.1.3",
    "roughjs": "^4.5.2",
    "sass": "^1.63.6",
    "to-px": "^1.1.0",
    "typescript": "^5.1.3",
    "vite": "^4.3.9",
    "vite-plugin-dts": "^3.0.0",
    "vue": "^3.3.4"
  },
  "peerDependencies": {
    "vue": ">=3.3.0"
  }
}
